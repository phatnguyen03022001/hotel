<!DOCTYPE html>
<html lang="en">

<head>
  <title>Manager The Plaza</title>
  <link rel="shortcut icon" href="/img/logo.png">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/bootstrap.css">
  <script src="/font/fontawesome/js/all.min.js"></script>
</head>

<body>
  <% const currentTab = "admin/customers"; %>
  <%- include('./partials/header.ejs', { currentTab: currentTab }) %>
  <%- include('./partials/msg-err.ejs') %>


 
  <div class="container">
    <h1 class="text-center mt-5">Enter user information</h1>
    <form class="needs-validation mt-5 mb-5" novalidate action="/admin/editcustomer/<%= user_id %>/" method="post">
      <input type="hidden" name="user_id" value="<%= user_id %>">

      <div class="col-lg-6 mx-auto">
        <label for="username" class="form-label">Username:</label>
        <input type="text" class="form-control" id="username" name="username" value="<%= username %>" required>
        <div class="invalid-feedback">
          Please enter a valid room type.
        </div>
      </div>

      <div class="col-lg-6 mx-auto">
        <label for="fullname" class="form-label">Fullname:</label>
        <input type="text" class="form-control" id="fullname" name="fullname" value="<%= fullname %>" required>
        <div class="invalid-feedback">
          Please enter a valid room type.
        </div>
      </div>


      <div class="col-lg-6 mx-auto">
        <label for="email" class="form-label">Email:</label>
        <input type="text" class="form-control" id="email" name="email" value="<%= email %>" required>
        <div class="invalid-feedback">
          Please enter a description.
        </div>
      </div>

      <div class="col-lg-6 mx-auto">
        <label for="phone" class="form-label">Phone:</label>
        <input type="text" class="form-control" id="phone" name="phone" value="<%= phone %>" required>
        <div class="invalid-feedback">
          Please enter a valid price.
        </div>
      </div>

      <div class="col-lg-6 mx-auto">
        <label for="address" class="form-label">Address:</label>
        <input type="text" class="form-control" name="address" value="<%= address %>" required>
        <div class="invalid-feedback">
          Please enter a valid price.
        </div>
      </div>

      <div class="mb-3 text-center mt-4">
        <button class="btn btn-primary" type="submit">Update customer</button>
      </div>
    </form>
  </div>

  <%- include('./partials/footer.ejs') -%>
  <script src="/js/bootstrap.js"></script>
</body>

</html>