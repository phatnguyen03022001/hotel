<!DOCTYPE html>
<html>

<head>
  <title>Manager The Plaza</title>
  <link rel="shortcut icon" href="/img/logo.png">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/bootstrap.css">
  <script src="/font/fontawesome/js/all.min.js"></script>
</head>

<body>
  <% const currentTab="admin/reservations" ; %>
  <%- include('./partials/header.ejs', { currentTab: currentTab }) %>
  <%- include('./partials/msg-err.ejs') %>



  <!-- CODE HERE -->

  <form class="needs-validation mt-5 mb-5" action="/admin/reservations" method="post">
    <div class="container my-4">
      <div class="row">
        <div class="mt-2 mb-5 col-lg-3">
          <div>
            <h1>Option</h1>
            <label for="filter-month" class="form-label">Filter by month:</label>
            <select name="year" id="filter-month" class="form-select mb-3">
              <option value="">All years</option>
              <option value="2022">2022</option>
              <option value="2023">2023</option>
              <option value="2024">2024</option>
              <option value="2025">2025</option>
              <option value="2026">2026</option>
            </select>
          </div>

          <div>
            <label for="filter-month" class="form-label">Filter by month:</label>
            <select name="month" id="filter-month" class="form-select mb-3">
              <option value="">All months</option>
              <option value="01">1 - January</option>
              <option value="02">2 - February</option>
              <option value="03">3 - March</option>
              <option value="04">4 - April</option>
              <option value="05">5 - May</option>
              <option value="06">6 - June</option>
              <option value="07">7 - July</option>
              <option value="08">8 - August</option>
              <option value="09">9 - September</option>
              <option value="10">10 - October</option>
              <option value="11">11 - November</option>
              <option value="12">12 - December</option>
            </select>
          </div>

          <div>
            <label for="filter-room-type" class="form-label">Filter by room type:</label>
            <select name="room_type" id="filter-room-type" class="form-select mb-3">
              <option value="">All room types</option>
              <option value="Standard">Standard</option>
              <option value="Deluxe">Deluxe</option>
              <option value="Suite">Suite</option>
            </select>
          </div>
          <div class="text-center">
            <button class="btn btn-primary" type="submit">Search</button>
          </div>
        </div>
        <div class="col-lg-9">
          <div class="table-responsive bg-dark bg-opacity-10 rounded">
            <div style="height: 400px; overflow: auto;">
              <table class="table table-striped">
                <thead class="table-dark">
                  <tr>
                    <th>Booking ID</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Room Type</th>
                    <th>Total Payment</th>
                  </tr>
                </thead>
                <tbody>
                  <% let totalPayment = 0; %>
                  <% bookings.forEach((booking) =>{ %>
                  <tr>
                    <td><%= booking.booking_id %></td>
                    <td><%= booking.start_date.toLocaleDateString() %></td>
                    <td><%= booking.end_date.toLocaleDateString()  %></td>
                    <td><%= booking.fullname %></td>
                    <td><%= booking.email %></td>
                    <td><%= booking.phone %></td>
                    <td><%= booking.room_type %></td>
                    <td><%= booking.total_payment %></td>
                  </tr>
                  <% totalPayment += booking.total_payment; %>
                  <% }); %>
                </tbody>
              </table>
            </div>
          </div>
        </div>

        <div class="d-flex justify-content-end mt-4">
          <h5>Total revenue: <span class="badge bg-primary fs-6"><%= totalPayment %> VND</span></h5>
        </div>

      </div>
    </div>
  </form>
  <!-- ......... -->
  <%- include('./partials/footer.ejs') -%>
  <script src="/js/bootstrap.js"></script>
</body>

</html>