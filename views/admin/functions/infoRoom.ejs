<div class="container">
  <h1 class="text-center mt-5">Enter room information</h1>
  <form class="needs-validation mt-5 mb-5" novalidate action="/admin/addroom" method="post" enctype="multipart/form-data">
    <div class="col-lg-6 mx-auto">
      <label for="room_number" class="form-label">Room Number:</label>
      <input type="text" class="form-control" id="room_number" name="room_number" required>
      <div class="invalid-feedback">
        Please enter a valid room number.
      </div>
    </div>

    <div class="col-lg-6 mx-auto">
      <label for="room_type" class="form-label">Room Type:</label>
      <select id="room_type" name="room_type" class="form-select" required>
        <option value="Standard">Standard</option>
        <option value="Superior">Superior</option>
        <option value="Deluxe">Deluxe</option>
      </select>
      <div class="invalid-feedback">
        Please select a valid room type.
      </div>
    </div>
    
    <div class="col-lg-6 mx-auto">
      <label for="room_occupancy" class="form-label">Occupancy:</label>
      <select id="room_occupancy" name="room_occupancy" class="form-select" required>
        <option value="Single Bedroom">Single Bedroom</option>
        <option value="Twin Bedroom">Twin Bedroom</option>
        <option value="Double Bedroom">Double Bedroom</option>
        <option value="Triple Bedroom">Triple Bedroom</option>
      </select>
      <div class="invalid-feedback">
        Please select a valid room type.
      </div>
    </div>

    <div class="col-lg-6 mx-auto">
      <label for="description" class="form-label">Description:</label>
      <input type="text" class="form-control" id="description" name="description" required>
      <div class="invalid-feedback">
        Please enter a description.
      </div>
    </div>

    <div class="col-lg-6 mx-auto">
      <label for="price" class="form-label">Price:</label>
      <input type="number" class="form-control" id="price" name="price" required>
      <div class="invalid-feedback">
        Please enter a valid price.
      </div>
    </div>

      <div class="col-lg-6 mx-auto">
        <label for="room_image" class="form-label">Room Image:</label>
        <input type="file" class="form-control" id="room_image" name="room_image" accept="image/*" required>
        <div class="invalid-feedback">
          Please select a valid room image.
        </div>
      </div>

    <div class="mb-3 text-center mt-4">
      <button class="btn btn-primary" type="submit">Add Room</button>
    </div>
  </form>
</div>
