<!DOCTYPE html>
<html>

<head>
  <title>Manager The Plaza</title>
  <link rel="shortcut icon" href="/img/logo.png">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/bootstrap.css">
  <script src="/font/fontawesome/js/all.min.js"></script>
</head>

<body>
  <% const currentTab="admin/services" ; %>
  <%- include('./partials/header.ejs', { currentTab: currentTab }) %>
  <%- include('./partials/msg-err.ejs') %>

  <!-- CODE HERE -->
  <div class="container py-5 text-center">
    <h1 text-con>Services Manager</h1>
  </div>

  <div class="container text-center pb-5">
    <button type="button" class="btn btn-primary px-4 py-2 shadow-sm" data-bs-toggle="modal" data-bs-target="#addServiceModal">
      Add Service
    </button>
  </div>

  <div class="modal fade" id="addServiceModal" tabindex="-1" aria-labelledby="addServiceModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="addServiceModalLabel">Add new service</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <%- include('./functions/infoServices.ejs') %>
        </div>
      </div>
    </div>
  </div>


  <!-- Thông tin dịch vụ ĂN UỐNG -->
  <div class="container py-5 text-center bg-dark text-light rounded-3">
    <h1 text-con>Food service</h1>
  </div>

  <div class="container py-5">
    <% if (typeof services !=='undefined' && services.length> 0) { %>
    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% for (let i=0; i < services.length; i++) { %>
      <% if (services[i].service_type === 'Food Service') { %>
      <div class="col">
        <div class="card h-100">
          <img src="<%= services[i].service_image_url %>" onerror="this.src='/img/error.jpg'" class="card-img-top" alt="service <%= i+1 %>" style="object-fit: cover; height: 250px; max-width: 100%;">
          <div class="card-body bg-dark text-light rounded-bottom">
            <div class="border-bottom mb-3">
              <h3 class="card-title fw-bold">FOOD <% i+1 %> </h3>
            </div>

            <div class="border-bottom mb-3">
              <ul class="list-unstyled">
                <li>Service Name: <strong>
                    <%= services[i].service_name %>
                  </strong></li>
                <li>Kind of service: <strong>
                    <%= services[i].service_type %>
                  </strong></li>
                <li>Describe: <strong>
                    <%= services[i].description %>
                  </strong></li>
                <li>Price: <strong>
                    <%= services[i].price %>
                  </strong> VND </li>
              </ul>
            </div>

            <div class="d-flex" role="group">
              <form method="get" action="/admin/editservice/<%= services[i].service_id %>/">
                <button type="submit" class="btn btn-primary">Edit</button>
              </form>
              <form method="post" action="/admin/delservice/<%= services[i].service_id %>/">
                <input type="hidden" name="service_id" value="<%= services[i].service_id %>">
                <button type="submit" class="btn btn-danger mx-2">Delete</button>
              </form>
            </div>
          </div>
        </div>
      </div>
      <% } %>
      <% } %>
    </div>
    <% }%>
  </div>

  <!-- Thông tin dich vụ ĐƯA ĐÓN-->
  <div class="container py-5 text-center bg-dark text-light rounded-3">
    <h1 text-con>Shuttle service</h1>
  </div>

  <div class="container py-5">
    <% if (typeof services !=='undefined' && services.length> 0) { %>
    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% for (let i=0; i < services.length; i++) { %>
      <% if (services[i].service_type === 'Shuttle service') { %>
      <div class="col">
        <div class="card h-100">
          <img src="<%= services[i].service_image_url %>" onerror="this.src='/img/error.jpg'" class="card-img-top" alt="service <%= i+1 %>" style="object-fit: cover; height: 250px; max-width: 100%;">
          <div class="card-body bg-dark text-light rounded-bottom">
            <div class="border-bottom mb-3">
              <h3 class="card-title fw-bold">SHUTTLE</h3>
            </div>

            <div class="border-bottom mb-3">
              <ul class="list-unstyled">
                <li>Service Name: <strong>
                    <%= services[i].service_name %>
                  </strong></li>
                <li>Kind of service: <strong>
                    <%= services[i].service_type %>
                  </strong></li>
                <li>Describe: <strong>
                    <%= services[i].description %>
                  </strong></li>
                <li>Price: <strong>
                    <%= services[i].price %>
                  </strong> VND </li>
              </ul>
            </div>

            <div class="d-flex" role="group">
              <form method="get" action="/admin/editservice/<%= services[i].service_id %>/">
                <button type="submit" class="btn btn-primary">Edit</button>
              </form>
              <form method="post" action="/admin/delservice/<%= services[i].service_id %>/">
                <input type="hidden" name="service_id" value="<%= services[i].service_id %>">
                <button type="submit" class="btn btn-danger mx-2">Delete</button>
              </form>
            </div>
          </div>
        </div>
      </div>
      <% } %>
      <% } %>
    </div>
    <% }%>
  </div>

  <!-- ......... -->
  <%- include('./partials/footer.ejs') -%>
  <script src="/js/bootstrap.js"></script>
</body>

</html>