<!DOCTYPE html>
<html>

<head>
  <title>The Plaza</title>
  <link rel="shortcut icon" href="/img/logo.png">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/bootstrap.css">
  <script src="/font/fontawesome/js/all.min.js"></script>
</head>

<body>
  <% const currentTab="history" ; %>
  <%- include('./partials/header.ejs', { currentTab: currentTab }) %>
  <%- include('./partials/msg-err.ejs') %>


  <!-- CODE HERE -->
  <div class="container">
    <div class="row">
      <div class="col-md-8 offset-md-2 mt-3 mb-4">
        <div class="progress">
          <div class="progress-bar bg-danger" role="progressbar" style="width: 100%;" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">100%</div>
        </div>
      </div>
    </div>
  </div>

  <% if (history.length===0) { %>
    <div class="row">
      <div class="col">
        <p>No bookings yet.</p>
      </div>
    </div>
  <% } else { %>
    <div class="container py-5">
      <h1 class="text-center mb-5">Booking History</h1>
      <div class="table-responsive bg-dark bg-opacity-10 rounded"></div>
      <table class="table table-striped table-hover">
          <thead class="table-dark">
            <tr>
              <th>#</th>
              <th>Start Date</th>
              <th>End Date</th>
              <th>Room Number</th>
              <th>Total Days</th>
              <th>Price (VND)</th>
            </tr>
          </thead>
          <tbody>
          <% history.forEach((item, index)=> { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= item.start_date.toLocaleDateString() %></td>
              <td><%= item.end_date.toLocaleDateString() %></td>
              <td><%= item.room_number %></td>
              <td><%= item.total_days %></td>
              <td><%= item.price %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>

    </div>
    </div>
  <% } %>


  <!-- ......... -->
  <%- include('./partials/footer.ejs') -%>
  <script src="/js/bootstrap.js"></script>
</body>

</html>