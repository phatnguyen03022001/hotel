<!DOCTYPE html>
<html>

<head>
  <title>The Plaza</title>
  <link rel="shortcut icon" href="/img/logo.png">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/bootstrap.css">
  <script src="/font/fontawesome/js/all.min.js"></script>
</head>

<body>
  <% const currentTab="settings" ; %>
  <%- include('./partials/header.ejs', { currentTab: currentTab }) %>
  <%- include('./partials/msg-err.ejs') %>

  <!-- CODE HERE -->

  <div class="container">
    <h1 class="text-center mt-5">Edit Your Account Settings</h1>
    <form class="needs-validation mt-5 mb-5" novalidate method="post" action="/settings">
      <div class="col-lg-6 mx-auto">
        <label for="fullname" class="form-label">Full Name</label>
        <input type="text" class="form-control" id="fullname" name="fullname" value="<%= fullname %>">
      </div>
      <div class="col-lg-6 mx-auto">
        <label for="email" class="form-label">Email address</label>
        <input type="email" class="form-control" id="email" name="email" value="<%= email %>">
      </div>
      <div class="col-lg-6 mx-auto">
        <label for="phone" class="form-label">Phone Number</label>
        <input type="text" class="form-control" id="phone" name="phone" value="<%= phone %>">
      </div>
      <div class="col-lg-6 mx-auto">
        <label for="address" class="form-label">Address</label>
        <input type="text" class="form-control" id="address" name="address" value="<%= address %>">
      </div>
      <div class="mb-3 text-center mt-4">
        <button type="submit" class="btn btn-primary">Save</button>
      </div>
    </form>
    
    <div class="mb-3 text-center mt-4">
      <a href="/changepass">Change the password?</a>
    </div>
  </div>

  <!-- ......... -->
  <%- include('./partials/footer.ejs') -%>
  <script src="/js/bootstrap.js"></script>
</body>

</html>